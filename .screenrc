#basic settings... self explainatory
nethack on
deflogin on
autodetach on
startup_message off
 
# the dash makes it a login shell
defshell -$SHELL
defscrollback 2048
nonblock on
defutf8 on
defbce on 
defflow off
msgwait 1
altscreen on
defhstatus "screen: ^En (^Et)"
term xterm-256color
 
# for urgency hints from irssi
bell_msg ""
vbell off
 
 
shelltitle "$"
 
#1 irssi  [2 zsh]  3 # vim  4 mutt           --INSERT--  1 mail  6 
updates
hardstatus alwayslastline "%{= dd}%-w[%n %t]%+w%=%{= dW}%h%{= dd}%20`%10`"
 
bind c screen 1
bind ^c screen 1
bind 0 select 10
 
bindkey -k k1 select 1
bindkey -k k2 select 2
bindkey -k k3 select 3
bindkey -k k4 select 4
bindkey -k k5 select 5
bindkey -k k6 select 6
bindkey -k k7 select 7
bindkey -k k8 select 8
 
bindkey -k F3 command
 
